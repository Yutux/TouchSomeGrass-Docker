pipeline {
    agent any

    environment {
        COMPOSE_PROJECT_NAME = "touchsomegrass"
    }

    stages {
        stage('Checkout') {
            steps {
                git credentialsId: 'github-token', url: 'https://github.com/Yutux/TouchSomeGrass-Docker.git'
            }
        }

        stage('Build services') {
            steps {
                sh 'docker-compose build'
            }
        }

        stage('Start services') {
            steps {
                sh 'docker-compose up -d'
            }
        }
    }

    post {
        success {
            echo 'ðŸš€ Tous les services sont dÃ©marrÃ©s avec succÃ¨s !'
        }
        failure {
            echo 'ðŸ’¥ Ã‰chec du pipeline. VÃ©rifie les logs.'
        }
    }
}
